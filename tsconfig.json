{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "types/**/*",
    "src/**/*",
    "tests/**/*"
  ]
}
